{
  "manifest_version": 2,

  "name": "Detoxify",
  "description": "Extension to detoxify comments on social networks",
  "version": "1.0",
  "browser_action": {
    "default_popup": "index.html"
  },
  "permissions": ["http://127.0.0.1:8080/"],
  "content_scripts": [
    {
      "matches": ["*://twitter.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
